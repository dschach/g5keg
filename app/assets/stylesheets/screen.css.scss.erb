/* reset - don't modify */
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,blockquote,th,td{margin:0;padding:0;}
table{border-collapse:collapse;border-spacing:0;}
fieldset,img{border:0;}
address,caption,cite,code,dfn,th,var{font-style:normal;font-weight:normal;}
p,ol,ul {list-style:none;}
p, img {padding:0;margin:0;}
caption,th {text-align:left;}
q:before,q:after{content:'';}
abbr,acronym {border:0;}
/* /reset */


/* ------------------------------------------------------------------------------------ */
/* GLOBAL SETTINGS */
/* ------------------------------------------------------------------------------------ */

aside, article, section, header, nav { display: block; }

a { color: #3192b7; text-decoration:none; }
a:hover,
a:active { color: #3192b7; text-decoration:underline; }

h1, h2, h3, p, ul { line-height:22px; margin:15px 0 15px 0; }
h1 { font-size:50px; margin:20px 0; color:#111; }
h2 { font-size:21px; color:#111; }
h3 { font-size:15px; }

.clear { clear:both; }
.none { display:none; }
.phark { display:block; text-indent:-9999px; }
.right { float:right; }
.left { float:left; }

.wrapper { margin:0 auto; }


