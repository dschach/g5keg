#banner .vote { width:100%; background:none; text-align:left; clear:both; }
#banner .vote a {
    -moz-border-radius:5px;
	border-radius:10px;
	-moz-box-shadow:0 1px 0 #ececec;
	-webkit-box-shadow:0 1px 0 #ececec;
	box-shadow:0 1px 0 #ececec;
	background:-moz-linear-gradient(90deg, #ececec, #f4f4f4) repeat scroll 0 0 transparent;
	border:1px solid #d4d4d4;
	color:#666; text-shadow:1px 1px 0 #fff;
	font-size:15px; font-weight:bold; line-height:15px;
	margin-bottom:10px; padding:11px 0 11px 0;
	display:inline-block; cursor:pointer;
	width:100px; text-align:center;
}
#banner .vote a:hover {
	background:-moz-linear-gradient(center top , #599BDC, #3072B3) repeat scroll 0 0 transparent;
	background:-webkit-gradient(center top , #599BDC, #3072B3) repeat scroll 0 0 transparent;
	border-color:#518CC6 #518CC6 #2A65A0;
	color:#FFFFFF;
	text-decoration:none;
	text-shadow:-1px -1px 0 rgba(0, 0, 0, 0.3);
}

#on_tap {
    -moz-border-radius:10px;
	border-radius:10px;
	-moz-box-shadow: 1px 1px 1px #ccc;
	-webkit-box-shadow: 1px 1px 1px #ccc;
	box-shadow: 1px 1px 1px #ccc;
	width:440px; min-height:320px;
	background:#fff; padding:20px;
	margin:-10px 0 45px 0;
}
#on_tap h2 {
	position:relative; top:-32px; left:-32px;
	width:98px; height:56px;
	background:url(asset-path("sprite_v2.png", asset)) no-repeat -254px 0;
	margin:0;
}
#on_tap .content { float:left; margin-top:-25px; width:200px; padding-left:6px; }
#on_tap h3 { color:#222; font-size:20px; margin:0 0 9px 0; }
#on_tap p { margin:9px 0; line-height:19px; font-size:13px; }
#on_tap .beer_logo { float:right; margin:-50px 6px 17px 0; }
#on_tap .details strong { margin-right:6px; }
#on_tap .details span { margin-right:16px; }
#on_tap .more { clear:both; text-align:right; border-top:1px solid #ddd; padding:7px 10px 0 10px; margin-bottom:0; }
#on_tap .brewery_link {
  -moz-border-radius:3px;
  -webkit-border-radius:3px;
  border-radius:3px;
  -moz-box-shadow:0 1px 2px #DDDDDD;
  -webkit-box-shadow:0 1px 2px #DDDDDD;
  box-shadow:0 1px 2px #DDDDDD;
  display:inline-block;
  font-size:12px; font-weight:bold;
  line-height:24px; padding:0 9px;
  text-align:center; color:#444;
  text-decoration:none;
  border:1px solid #ccc;
}
#on_tap .brewery_link:hover { border:1px solid #aaa; }

.rating {
  cursor: pointer;
  display: block;
  clear:none;
  width: 100px;
  float:left;
}
#on_tap .rating { float:right; margin:-28px 0 30px 0; clear: both; }
.rating:after {
  content: '.';
  display: block;
  height: 0; width: 0;
  clear: both; visibility: hidden;
}
.cancel, .star {
  float: left;
  width: 17px; height: 15px;
  overflow: hidden;
  text-indent: -999em;
  cursor: pointer;
}
div.done, div.done a { cursor: default; }
.star, .star a {background: url(asset-path("star.png", asset)) no-repeat 0 0px;}
.star a {
  display: block;
  width: 100%; height: 100%;
  background-position: 0 0px;
}
div.rating div.on a { background-position: 0 -16px; }
div.rating div.hover a { background-position: 0 -32px; }

#keg_numbers { height:1000px; background:#fff; width:100%; clear:both; }

